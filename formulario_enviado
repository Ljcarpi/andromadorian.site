        legal_and: "y",
        legal_priv: "Privacidad",
        float_cta: "Ver paquetes",
        theme_dark: "Tema oscuro",
        theme_light: "Tema claro",

        /* Thank you content */
        ty_title: "Â¡Gracias por elegirnos!",
        ty_text: "Tu formulario se enviÃ³ correctamente. En breve me pondrÃ© en contacto para coordinar los prÃ³ximos pasos. Si querÃ©s, podÃ©s explorar los paquetes o volver al inicio.",
        ty_cta_packages: "Ver paquetes",
        ty_cta_home: "Volver al inicio",
        ty_autoredirect: "Te redirigiremos al inicio automÃ¡ticamente en unos segundosâ€¦"
      },
      en: {
        meta_title: "Thanks â€” Andromadorian",
        meta_desc: "Thanks for reaching out. Your form was submitted successfully.",
        aria_brand: "Home",
        nav_examples: "Examples",
        nav_contact: "Contact",
        nav_packages: "See packages",
        footer_tag: "Professional websites",
        legal_prefix: "By using this site you accept our",
        legal_terms: "Terms & Conditions",
        legal_and: "and",
        legal_priv: "Privacy",
        float_cta: "See packages",
        theme_dark: "Dark theme",
        theme_light: "Light theme",

        /* Thank you content */
        ty_title: "Thanks for choosing us!",
        ty_text: "Your form was sent successfully. Iâ€™ll get back to you shortly to coordinate next steps. Meanwhile, you can browse packages or return to the homepage.",
        ty_cta_packages: "See packages",
        ty_cta_home: "Back to home",
        ty_autoredirect: "Weâ€™ll redirect you to the homepage in a few secondsâ€¦"
      }
    };

    const $ = (sel, root=document) => root.querySelector(sel);
    const $$ = (sel, root=document) => Array.from(root.querySelectorAll(sel));

    function applyI18n(lang){
      const dict = T[lang] || T.es;

      // text nodes
      $$("[data-i18n]").forEach(el=>{
        const key = el.getAttribute("data-i18n");
        if (key && dict[key] !== undefined){
          el.innerHTML = dict[key];
        }
      });

      // attribute mappings
      $$("[data-i18n-attr]").forEach(el=>{
        const map = el.getAttribute("data-i18n-attr").split(";").map(s=>s.trim()).filter(Boolean);
        map.forEach(pair=>{
          const [attr, k] = pair.split(":").map(s=>s.trim());
          if (attr && k && dict[k] !== undefined){
            el.setAttribute(attr, dict[k]);
          }
        });
      });

      // document title & meta
      document.title = dict.meta_title;
      const meta = document.querySelector('meta[name="description"]');
      if (meta) meta.setAttribute("content", dict.meta_desc);

      // update html lang
      document.documentElement.setAttribute("lang", lang);

      // aria on brand link
      const brand = $(".brand");
      if (brand) brand.setAttribute("aria-label", dict.aria_brand);

      // update active state on lang buttons
      $$('.lang-switch button').forEach(btn=>{
        const isActive = btn.getAttribute('data-lang') === lang;
        btn.classList.toggle('active', isActive);
        btn.setAttribute('aria-pressed', String(isActive));
      });

      localStorage.setItem("lang", lang);
    }

    function applyTheme(theme){
      const isLight = theme === 'light';
      document.documentElement.classList.toggle('theme-light', isLight);

      // Actualiza estado del control segmentado
      $$('.theme-switch button').forEach(btn=>{
        const thisIsActive = btn.getAttribute('data-theme') === (isLight ? 'light' : 'dark');
        btn.classList.toggle('active', thisIsActive);
        btn.setAttribute('aria-pressed', String(thisIsActive));
      });

      localStorage.setItem('theme', isLight ? 'light' : 'dark');
    }

    (function init(){
      const lang = localStorage.getItem('lang') || 'es';
      applyI18n(lang);

      const theme = localStorage.getItem('theme') || 'dark';
      applyTheme(theme);

      // listeners idioma
      $$('.lang-switch button').forEach(btn=>{
        btn.addEventListener('click', ()=>applyI18n(btn.getAttribute('data-lang')));
      });

      // listeners tema
      $$('.theme-switch button').forEach(btn=>{
        btn.addEventListener('click', ()=>{
          const next = btn.getAttribute('data-theme');
          applyTheme(next);
        });
      });

      // Auto-redirect opcional (7s). Comenta este bloque si no lo querÃ©s.
      setTimeout(()=>{ window.location.href = "/"; }, 7000);
    })();
  </script>
