  <script>
    // AÃ±o footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // Diccionario i18n (extiende el de la landing con claves de "gracias")
    const T = {
      es: {
        meta_title: "Gracias â€” Andromadorian",
        meta_desc: "Gracias por contactarnos. Tu formulario se enviÃ³ correctamente.",
        aria_brand: "Inicio",
